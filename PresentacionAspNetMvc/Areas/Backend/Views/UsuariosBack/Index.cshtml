@model IEnumerable<TiendaVirtual.Entidades.IUsuario>

@{
    ViewBag.Title = "Usuarios Backend";
    Layout = "~/Areas/Backend/Views/Shared/_Layout - Backend.cshtml";
}

<h2><span class = "glyphicon glyphicon-user"></span>&nbsp;Usuarios Index</h2>

<p>
        @Html.ActionLink(" Crear Nuevo", "Create", null, new { @class = "glyphicon glyphicon-plus" })
    </p>
    <table class="table">
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Nick)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th ></th>
        </tr>

        @foreach (var item in Model.Reverse())
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Nick)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Borrar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
@section  BackToIndex
{
    @Html.ActionLink("CopyPasteShop BACKEND", "Index", "UsuariosBack", null, new { @class = "navbar-brand" })
}
