<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <!--<meta name="viewport" content="width=device-width, initial-scale=1.0">-->
    <title>@ViewBag.Title - CopyPasteShop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/tienda.css" />
</head>
<body class="container-fluid">
        <h1>CopyPasteShop BACKEND</h1>
        <nav class="navbar navbar-default">
            @*<div class="container-fluid">*@
                <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @RenderSection("BackToIndex")
                
            </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                    <ul class="nav navbar-nav">
                        <li>
                            @Html.ActionLink("Productos", "Index", "ProductosBack")
                            @*<a id="btnProductos" href="#">Productos</a>*@
                        </li>
                        <li>
                            @Html.ActionLink("Usuarios", "Index", "UsuariosBack")
                            @*<a id="btnUsuarios" href="#">Usuarios</a>*@
                        </li>
                        <li>
                            @Html.ActionLink("Facturas", "Index", "FacturasBack")
                            @*<a id="btnUsuarios" href="#">Usuarios</a>*@
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                          
                            @Html.ActionLink("Volver a la Tienda", "Index", "Productos", new { area = "" }, null)
                                     </li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            @*</div>*@
            <!-- /.container-fluid -->
        </nav>

        <div class="row">
            <div class="col-sm-offset-2 col-sm-8">
                @RenderBody()
            </div>
        </div>
  
</body>
</html>
