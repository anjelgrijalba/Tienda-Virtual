@model TiendaVirtual.Entidades.Carrito

@{
    ViewBag.Title = "Index";
}

<section id="carrito" class="row">
    <h2>Contenido del carrito de @(Model?.Usuario?.Nick)</h2>
    <h3>@(Model?.Usuario?.Nick)</h3>
    <div class=" col-sm-offset-1 col-sm-10">
        <table class="table table-striped table-hover table-condensed">
            <thead>
                <tr>
                    <th>Imagen</th>
                    <th>Artículo</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th></th>
                    <th>PVP</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.LineasFactura)
            {
                <tr>
                    <td>
                        <img alt="" class="thumbnail" height="30" width="40" src="~/fotos/@(item.Producto.Id).png" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                    <td></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                </tr>
        }
            </tbody>
            <tfoot>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <th>Total</th>
                    <td>@Html.DisplayFor(model => model.Total)</td>
                    <td></td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        <p>
                            @Html.ActionLink("Factura", "GenerarFactura", new { id = 223 },
new { @class = "btn btn-primary", role = "button" })
                        </p>
                        <p>
                            @Html.ActionLink("Index", "Index", "Productos", new { id = 223 },
new { @class = "btn btn-primary", role = "button" })

                        </p>
                        @*<button class="btn btn-primary" id="btnFactura">Factura</button>*@
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</section>
