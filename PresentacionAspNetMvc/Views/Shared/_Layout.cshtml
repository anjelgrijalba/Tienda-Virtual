@using TiendaVirtual.Entidades
@{
    IUsuario usuario = (IUsuario)Session["usuario"];
    
    var cantidadCarrito = Session["cantidadCarrito"];
}



<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <!--<meta name="viewport" content="width=device-width, initial-scale=1.0">-->
    <title>@ViewBag.Title - CopyPasteShop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/tienda.css" />

    @*@{

        string elNick = "";
        TiendaVirtual.Entidades.Usuario u = (TiendaVirtual.Entidades.Usuario)HttpContext.Current.Session["usuario"];
