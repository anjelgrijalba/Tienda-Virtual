                <ul class="list-unstyled">
                    <li><a href="#">Uno</a></li>
                    <li><a href="#">Dos</a></li>
                    <li><a href="#">Tres</a></li>
                </ul>
            </div>
            <div class="col-sm-4 text-center">
                <h4>Parte 3</h4>
                <ul class="list-unstyled">
                    <li><a href="#">Uno</a></li>
                    <li><a href="#">Dos</a></li>
                    <li><a href="#">Tres</a></li>
                </ul>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
   
</body>
</html>
